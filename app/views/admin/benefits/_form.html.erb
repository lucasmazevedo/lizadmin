<%= simple_form_for([:admin, @benefit], :html => {:class => "card"}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="card-header">
      <h3 class="card-title">Form elements</h3>
    </div>
    <div class="card-body">
      <div class="row">

        <div class="col-md-12 col-lg-6">
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :position %>
          <%= f.input :status, :as => :radio_buttons %>
        </div>

        <div class="col-md-12 col-lg-6">
          <%= f.input :url %>
          <label>Background Image</label>
          <%= image_tag(@benefit.bg_image_url) if @benefit.bg_image? %>
        <hr>
        <label>Upload Bg</label>
        <div class="form-group">
          <%= f.file_field :bg_image %>
          <%= f.hidden_field :bg_image_cache %>
        </div>
        </div>
      </div>
    </div>
  <div class="card-footer text-right">
    <div class="d-flex">
      <%= link_to 'Cancel', admin_benefits_path, class: "btn btn-danger" %>
      <%= f.button :submit, class: "btn btn-primary ml-auto" %>
    </div>
  </div>
<% end %>
