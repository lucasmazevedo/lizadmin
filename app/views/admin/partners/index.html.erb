<p id="notice"><%= notice %></p>

<h1>Partners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Logo image</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= partner.name %></td>
        <td><%= partner.url %></td>
        <td><%= partner.logo_image %></td>
        <td><%= partner.status %></td>
        <td><%= link_to 'Show', [:admin, partner] %></td>
        <td><%= link_to 'Edit', edit_admin_partner_path(partner) %></td>
        <td><%= link_to 'Destroy', [:admin, partner], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

