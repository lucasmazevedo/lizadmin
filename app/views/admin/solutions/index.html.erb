<p id="notice"><%= notice %></p>

<h1>Solutions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.title %></td>
        <td><%= solution.description %></td>
        <td><%= solution.status %></td>
        <td><%= link_to 'Show', [:admin, solution] %></td>
        <td><%= link_to 'Edit', edit_admin_solution_path(solution) %></td>
        <td><%= link_to 'Destroy', [:admin, solution], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Solution', new_admin_solution_path %>
