<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Specialty</th>
      <th>Url lattes</th>
      <th>Resume</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.photo %></td>
        <td><%= staff.specialty %></td>
        <td><%= staff.url_lattes %></td>
        <td><%= staff.resume %></td>
        <td><%= staff.status %></td>
        <td><%= link_to 'Show', [:admin, staff] %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', [:admin, staff], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

