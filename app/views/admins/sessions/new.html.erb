
<div class="page">
  <div class="page-single">
    <div class="container">
      <div class="row">
        <div class="col col-login mx-auto">
          <div class="text-center mb-6">
            <img src="/assets/tabler.svg" class="h-6" alt="">
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card' }) do |f| %>
            <div class="card-body p-6">
              <div class="card-title">Login to your account</div>
                <%= f.input :email, required: false, autofocus: true, "aria-describedby": "emailHelp", placeholder: "Enter email" %>
                <%= f.input :password, required: false, placeholder: "Password" %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <div class="form-footer">
                <%= f.button :submit, "Sign in", class: "btn btn-primary btn-block" %>
              </div>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="text-center text-muted"><br>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              </div>
              <% end -%>
            </div>
            <% end %>
          <div class="text-center text-muted">
            <%= render "admins/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
